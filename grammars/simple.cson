scopeName: 'source.smpl'
name: 'Simple'
fileTypes: [ 'smpl' ]
limitLineLength: false

patterns: [
  {
    #rule 1
    comment: 'grammar rule for comments'
    name: 'comment.line.simple'
    match: '#.*$'
  }
  {
    comment: 'grammar rule for types'
    match: '^([A-Z]+)::([a-z]+)$'
    captures:
      1:
        name: 'entity.name.type'
      2:
        name: 'variable.language'
  }
]
